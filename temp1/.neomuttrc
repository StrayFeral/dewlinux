# --- Identity ---
set realname = "Your Name"
set from = "you@example.com"

# --- Storage ---
set mbox_type = Maildir
set folder = "~/Mail"
set spoolfile = "+/Inbox"
set postponed = "+/Drafts"
set record = "+/Sent"

# --- Offline Sending ---
set sendmail = "~/bin/msmtpq -a primary"

# --- Caching (Makes offline reading fast) ---
set header_cache = "~/.cache/mutt/headers"
set message_cachedir = "~/.cache/mutt/bodies"

# --- Manual Sync Macro ---
# Press 'S' to send queue, fetch mail, and index for search
macro index S "<shell-escape>~/bin/msmtp-runqueue.sh && mbsync -a && notmuch new<enter>" "Sync Mail"

# --- Sidebar ---
set sidebar_visible = yes
mailboxes `find ~/Mail -maxdepth 1 -type d -name ".*" | xargs`

