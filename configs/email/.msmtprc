# ~/.msmtprc
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Primary account
account        personal
host           mail.example.com      # your SMTP server
port           587                  # usually 587 for STARTTLS
from           user@example.com
user           user@example.com
password       yourpassword         # or use pass with passwordeval

# Set this as default
account default : personal

