# Set default values for all following accounts.
defaults
auth            xoauth2
tls             on
tls_starttls    on
# Check your OS; if on macOS, this path might differ (e.g., /usr/local/etc/openssl/cert.pem)
tls_trust_file  /etc/ssl/certs/ca-certificates.crt
logfile         ~/.msmtp.log

# Gmail Account
account         gmail
auth            xoauth2
host            smtp.gmail.com
port            587
from            YOURGMAILEMAILHERE
user            YOURGMAILEMAILHERE
# This calls your custom DIY token script
passwordeval "python3 /home/YOURLINUXUSERNAMEHERE/mailhelper.py temporary_access_token"

# Set a default account
account default : gmail

